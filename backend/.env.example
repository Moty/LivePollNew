# LivePoll Backend Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED FOR PRODUCTION
# ===========================================

# Server Environment (development | production)
NODE_ENV=production

# JWT Secret - MUST be set in production (min 32 characters)
JWT_SECRET=your-secret-key-here-at-least-32-characters-long

# Allowed CORS origins (comma-separated for multiple)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================

# Option 1: Use a credentials file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/firebase-credentials.json

# Option 2: Use environment variables
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ===========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================

# Database connection (not needed if using Firebase only)
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=livepoll

# Database pool settings
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# SSL configuration for database
# DB_SSL_REJECT_UNAUTHORIZED=true

# ===========================================
# REDIS CONFIGURATION (Required for scaling)
# ===========================================

# Redis URL for session storage and Socket.IO adapter
# Required for horizontal scaling
REDIS_URL=redis://localhost:6379

# ===========================================
# OPTIONAL SETTINGS
# ===========================================

# Server port (default: 5001)
PORT=5001

# Logging level (error | warn | info | http | debug)
LOG_LEVEL=info

# Enable mock data (ONLY for testing, NOT for production)
# USE_MOCK_DATA=false

# Enable Socket.IO connection logging
# LOG_SOCKET_CONNECTIONS=false

# ===========================================
# DEVELOPMENT ONLY (NEVER use in production)
# ===========================================

# Allow authentication bypass in development
# ALLOW_DEV_AUTH_BYPASS=true
